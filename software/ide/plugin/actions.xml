<!-- $Id$
-->

<!DOCTYPE ACTIONS SYSTEM "actions.dtd">

<ACTIONS>
	<ACTION NAME="bumblebee.choose-file">
		<CODE>
			wm.addDockableWindow(BumblebeePlugin.NAME);
			wm.getDockableWindow(BumblebeePlugin.NAME).chooseFile();
		</CODE>
	</ACTION>

	<ACTION NAME="bumblebee.save-file">
		<CODE>
			wm.addDockableWindow(BumblebeePlugin.NAME);
			wm.getDockableWindow(BumblebeePlugin.NAME).saveFile();
		</CODE>
	</ACTION>

	<ACTION NAME="bumblebee.copy-to-buffer">
		<CODE>
			wm.addDockableWindow(BumblebeePlugin.NAME);
			wm.getDockableWindow(BumblebeePlugin.NAME).copyToBuffer();
		</CODE>
	</ACTION>
</ACTIONS>

